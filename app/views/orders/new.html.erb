<div class="container">
<div class="row">
<div class="col">

<h1> Place Your Order </h1>

<%= render partial: 'layouts/errors', locals: {object: @order} %>

<%= bootstrap_form_for @order do |f| %>

    <%= f.text_field :address_field_1, placeholder: "House and street number" %>

    <%= f.text_field :address_field_2, placeholder: "Apt/Flr" %>

    <%= f.text_field :city %>

    <%= f.text_field :state, placeholder: "eg: NY"%>

    <%= f.text_field :zipcode %>

    <%= f.select :payment_method, options_for_select(["Card", "Bank Account", "Paypal"]) %>

    <%= f.fields_for :buyer do |buyer_attr| %>

        <%= buyer_attr.text_field :firstname %>

        <%= buyer_attr.text_field :lastname %>

        <%= buyer_attr.text_field :username %>

        <%= buyer_attr.email_field :email %>

        <%= buyer_attr.password_field :password %>

        <%= buyer_attr.password_field :password_confirmation %>
    <% end %>

    <%= f.submit "Complete Order", class:"btn btn-primary btn-sm" %>

<% end %>

</div>
</div>
</div>