<h1> Your Cart </h1>

<% @cart_products.each.with_index(1) do |cp, i|%>
    <%= "#{i}. #{cp.product.title}" %> <br>
    <%= "Quantity: #{cp.quantity}" %> <br> 

    Price <%= cp.product.price %><br>
    subtotal <%= cp.subtotal %><br>
    "----------------"<br>
    <%= form_for cp do |f| %>
        <%= f.select :quantity, options_for_select([1, 2, 3]) %>
        <%= f.submit "Update Quantity", method: :patch %>
    <% end %> 
    <%= link_to 'Remove', cart_product_path(cp), method: :delete %><br>
<%end%>
<%= "Total amount: #{@cart.total}" if @cart %>

<%= link_to 'Checkout', new_order_path %>