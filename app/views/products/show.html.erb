<h1> <%= @product.title %> </h1>

<p>
    <%= @product.brand %><br>
    <%= @product.product_model %><br>
    <%= @product.storage_capacity %><br>
    <%= @product.condition %><br>
    <%= @product.color%><br>
    <%= @product.description %><br>
    $ <%= @product.price %> <br>
</p>

<% if @product.seller == current_user %>
    <%= link_to 'Edit', edit_product_path(@product) %>

    <%= link_to 'Delete', product_path(@product), method: :delete %><br>
<% else %>
    <%= form_for CartProduct.new do |f| %>
        <%= f.label :quantity, "Quantity"%>
        <p>Limit 3 per Customer</p>
        <%= f.select :quantity, options_for_select([1, 2, 3])%>
        <%= f.hidden_field :product_id, :value => @product.id %>
        <%= f.submit "Add to Cart"%>
    <% end %>

<% end %>