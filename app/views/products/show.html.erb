<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
        <div class="display:flex;justify-content:center;align-items:center;border-right:1px solid #f6f6f6">
        <% if @product.image.attached? %>
            <%= image_tag url_for(@product.s_image) %>
        <%end%>
        </div>
        </div>

        <div class="col-xs-5 ml-auto" style="border:0px solid gray list-style-type:none;font-size:14px;display:inline-flex;margin-bottom:0;margin-top:20px">
            <ul style="list-style-type:none">
                <h1> <%= @product.title.titleize %> </h1>
                <li><strong>Brand:</strong>    <%= @product.brand.titleize %><br></li>
                <li><strong>Model:</strong> <%= @product.product_model %><br></li>
                <li><strong>Storage Capacity:</strong> <%= @product.storage_capacity %><br></li>
                <li><strong>Condition:</strong> <%= @product.condition %><br></li>
                <li><strong>Color:</strong>  <%= @product.color%><br></li>
                <li><strong>Price: $</strong>  <%= @product.price %> <br></li>
                <li><li><strong>Available Quantity:</strong> <%= @product.quantity %>
            


            <% if @product.seller == current_user %>
                    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>

                    <%= link_to 'Delete', product_path(@product), method: :delete, class: "btn btn-danger" %><br>
            <% else %>
                <%= bootstrap_form_for CartProduct.new do |f| %>
                    <%= f.select :quantity, options_for_select(select_quantity(@product)), label: "Qty"%>
                    <%= f.hidden_field :product_id, :value => @product.id %>
                    <%= f.submit "Add to Cart", class: "btn btn-primary"%>
                <% end %>

            <% end %>
            </ul>
        </div>
        
        
        <div class="col-xs-9">
            <div style="width:100%;border-top:1px solid silver">
                <p style="padding:15px;">
                    <small>
                        <li><strong>Description:</strong>  <%= @product.description %><br></li>
                    </small>
                </p>
            </div>
        </div>
  </div>
</div>