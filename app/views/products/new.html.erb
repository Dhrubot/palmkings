<h1>Create A Product For Sale</h1>

<%= form_for @product do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :brand %>
    <%= f.text_field :brand %>

    <%= f.label :phone_model %>
    <%= f.text_area :phone_model %>

    <%= f.label :storage_capacity %>
    <%= f.text_area :storage_capacity %>

    <%= f.label :condition %>
    <%= f.text_field :condition %>

    <%= f.label :color %>
    <%= f.text_field :color %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :quantity %>
    <%= f.number_field :quantity %>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.submit 'Submit'%>
<% end %>