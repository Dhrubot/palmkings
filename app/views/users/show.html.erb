
<div class="container emp-profile padding pt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    <%= "#{@user.firstname.capitalize} #{@user.lastname.capitalize}"%>
                </h5>
                <h6>
                    Account Details
                </h6>
            </div>
        </div>
    </div>

    <div class="row pt-5">
        <div class="col-md-4">
            <div class="profile-work">
                            <p><b>Useful Links</b></p>
                            <span><%= link_to "List of active sales", user_products_path(@user)%></span><br/>
            </div>
        </div>
        <div class="col-md-8 p-4">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row p-4 text-center">
                        <div class="col-md-6">
                            <label><b>Personal Informations</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Username</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Name</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= "#{@user.firstname.capitalize} #{@user.lastname.capitalize}"%></p>
                        </div>
                    </div>
                                        
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Email</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.email %></p>
                        </div>
                    </div> 
                     <div class="row">
                        <div class="col-md-6">
                            <label><b>Member since </b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.created_at.strftime("%Y-%m-%d") %></p>
                        </div>
                    </div>                  
                                        
                </div>
            </div>
        </div>
        <div class="container p-4">
            <div class="row">
                <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
            <div class=col>
            </div>
            </div>
        </div>
    </div>
</div>

