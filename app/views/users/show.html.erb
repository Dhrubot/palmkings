<div class="container emp-profile padding">
    <div class="row">
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    <%= "#{@user.firstname.capitalize} #{@user.lastname.capitalize}"%>
                </h5>
                <h6>
                    Account Details
                </h6>
            </div>
        </div>
        <div class="col-md-2">
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
        </div>
    </div>

<br>
<br>
<br>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-work">
                            <p><b>Useful Links</b></p>
                            <a href="">Seller Account</a><br/>
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Username</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Name</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= "#{@user.firstname.capitalize} #{@user.lastname.capitalize}"%></p>
                        </div>
                    </div>
                                        
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>Email</b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.email %></p>
                        </div>
                    </div> 
                     <div class="row">
                        <div class="col-md-6">
                            <label><b>Member since </b></label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.created_at %></p>
                        </div>
                    </div>                  
                                        
                </div>
            </div>
        </div>
    </div>
</div>

